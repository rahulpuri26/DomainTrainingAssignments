@model Hosp_Code_First.Models.Appointment

@{
    ViewData["Title"] = "Delete Appointment";
}

<h2>Delete Appointment</h2>

<div>
    <h4>Are you sure you want to delete this appointment?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Date</dt>
        <dd class="col-sm-10">@Model.AppointmentDate</dd>
        <dt class="col-sm-2">Doctor</dt>
        <dd class="col-sm-10">@Model.Doctor.Name</dd>
        <dt class="col-sm-2">Patient</dt>
        <dd class="col-sm-10">@Model.Patient.Name</dd>
    </dl>
</div>
<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="AppointmentId" />
    <div class="form-group">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
