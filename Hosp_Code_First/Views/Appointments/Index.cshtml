@model IEnumerable<Hosp_Code_First.Models.Appointment>

@{
    ViewData["Title"] = "Appointments";
}

<h2>Appointments</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Appointment</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Appointment Date</th>
            <th>Doctor</th>
            <th>Patient</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var appointment in Model)
        {
            <tr>
                <td>@appointment.AppointmentDate</td>
                <td>@appointment.Doctor.Name</td>
                <td>@appointment.Patient.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@appointment.AppointmentId">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@appointment.AppointmentId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

