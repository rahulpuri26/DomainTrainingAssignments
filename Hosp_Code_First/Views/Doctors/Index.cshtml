@model IEnumerable<Hosp_Code_First.Models.Doctor>

@{
    ViewData["Title"] = "Doctors";
}

<h2>Doctors</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Doctor</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Specialization</th>
            <th>Hospital</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var doctor in Model)
        {
            <tr>
                <td>@doctor.Name</td>
                <td>@doctor.Specialization</td>
                <td>@doctor.Hospital?.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@doctor.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@doctor.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
