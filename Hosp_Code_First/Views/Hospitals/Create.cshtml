@model Hosp_Code_First.Models.Doctor

@{
    ViewData["Title"] = "Create Doctor";
}

<h2>Create Doctor</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Specialization" class="control-label"></label>
        <input asp-for="Specialization" class="form-control" />
        <span asp-validation-for="Specialization" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="HospitalId" class="control-label">Hospital</label>
        <select asp-for="HospitalId" class="form-control" asp-items="@(new SelectList(ViewBag.Hospitals, "Id", "Name"))"></select>
        <span asp-validation-for="HospitalId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>
